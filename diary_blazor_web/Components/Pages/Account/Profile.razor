@page "/profile/{id}"
@rendermode InteractiveServer

<div class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50">
	@if (user.IsPublic == 1)
	{
		<div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
			<!-- Profile Header -->
			<div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
				<div class="h-32 bg-gradient-to-r from-diary-purple via-diary-pink to-diary-blue"></div>
				<div class="relative px-6 pb-6">
					<div class="flex flex-col sm:flex-row sm:items-end sm:space-x-6">
						<div class="relative -mt-16 mb-4 sm:mb-0">
							<div class="h-32 w-32 rounded-full border-4 border-white bg-gray-200 overflow-hidden">
								<img src="/images/user-image.jpg" alt="Profile Picture" class="h-full w-full object-cover">
							</div>
							<button class="absolute bottom-0 right-0 h-10 w-10 bg-diary-purple text-white rounded-full flex items-center justify-center hover:bg-diary-purple/90 transition duration-200">
								<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
								</svg>
							</button>
						</div>
						<div class="flex-1 min-w-0">
							<h1 class="text-2xl font-bold text-gray-900 truncate">@user.Fullname</h1>
							<p class="text-lg text-gray-600">@user.Username</p>
							<p class="text-gray-500 mt-1">Tham gia vào @user.CreatedAt?.ToString("dd/MM/yyyy")</p>
						</div>
						@if (!viewByGuest)
						{
							<div class="flex space-x-3 mt-4 sm:mt-0">
								<button id="editProfileBtn" class="px-4 py-2 bg-diary-purple text-white rounded-lg hover:bg-diary-purple/90 transition duration-200 flex items-center">
									<svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
									</svg>
									Chỉnh sửa
								</button>
							</div>
						}
					</div>
				</div>
			</div>

			<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
				<!-- Main Content -->
				<div class="lg:col-span-2 space-y-8">
					<!-- About Section -->
					<div class="bg-white rounded-xl shadow-lg p-6">
						<div class="flex items-center justify-between mb-4">
							<h2 class="text-xl font-semibold text-gray-900">Giới thiệu</h2>
							@if (!viewByGuest)
							{
								<button class="text-diary-purple hover:text-diary-pink transition duration-200">
									<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
									</svg>
								</button>
							}
						</div>
						<p class="text-gray-600 leading-relaxed">
							@user.About
						</p>
					</div>

					<!-- Recent Stories -->
					<div class="bg-white rounded-xl shadow-lg p-6">
						<div class="flex items-center justify-between mb-6">
							<h2 class="text-xl font-semibold text-gray-900">Nhật ký gần đây</h2>
							<a href=@($"/view/{user.Id}") class="text-diary-purple hover:text-diary-pink transition duration-200 text-sm font-medium">Xem tất cả</a>
						</div>
						<div class="space-y-4">
							@foreach (Diary diary in user.Diaries.Where(d => d.IsPublic == 1).Take(3).ToList())
							{
								<div class="border border-gray-200 rounded-lg p-4 hover:border-diary-purple/30 transition duration-200">
									<div class="flex items-start justify-between">
										<div class="flex-1">
											<h3 class="text-xl font-medium text-gray-900 mb-1">@diary.Title</h3>
											<p class="text-gray-600 text-sm mb-2 line-clamp-3">@(FilterContent(diary.Content))</p>
											<div class="flex items-center text-xs text-gray-500">
												<span>@diary.PublicedAt?.ToString("dd/MM/yyyy")</span>
												<span class="mx-2">•</span>
												<span>
													<i class="fa-solid fa-comment"></i>
													@diary.Comments.Count bình luận
												</span>
												<span class="mx-2">•</span>
												<span class="flex items-center">
													<svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
														<path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
													</svg>
													@diary.Likes.Count lượt thích
												</span>
											</div>
										</div>
										<img src="@diary.Thumbnail" alt="Story thumbnail" class="h-15 w-20 rounded-lg object-cover ml-4">
									</div>
								</div>
							}
						</div>
					</div>
				</div>

				<!-- Sidebar -->
				<div class="space-y-6">
					<!-- Stats -->
					<div class="bg-white rounded-xl shadow-lg p-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-4">Thống kê</h3>
						<div class="space-y-4">
							<div class="flex items-center justify-between">
								<div class="flex items-center">
									<div class="h-8 w-8 bg-diary-purple/10 rounded-full flex items-center justify-center mr-3">
										<svg class="h-4 w-4 text-diary-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
										</svg>
									</div>
									<span class="text-gray-600">Tổng số bài</span>
								</div>
								<span class="font-semibold text-gray-900">@user.Diaries.Where(d => d.IsPublic == 1).ToList().Count</span>
							</div>
							<div class="flex items-center justify-between">
								<div class="flex items-center">
									<div class="h-8 w-8 bg-diary-pink/10 rounded-full flex items-center justify-center mr-3">
										<svg class="h-4 w-4 text-diary-pink" fill="currentColor" viewBox="0 0 20 20">
											<path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
										</svg>
									</div>
									<span class="text-gray-600">Số lượt thích</span>
								</div>
								<span class="font-semibold text-gray-900">@user.Diaries.Where(d => d.IsPublic == 1).Sum(d => d.Likes.Count)</span>
							</div>
							<div class="flex items-center justify-between">
								<div class="flex items-center">
									<div class="h-8 w-8 bg-diary-blue/10 rounded-full flex items-center justify-center mr-3">
										<svg class="h-4 w-4 text-diary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
										</svg>
									</div>
									<span class="text-gray-600">Số lượt bình luận</span>
								</div>
								<span class="font-semibold text-gray-900">@user.Diaries.Where(d => d.IsPublic == 1).Sum(d => d.Comments.Count)</span>
							</div>
							@* <div class="flex items-center justify-between">
							<div class="flex items-center">
								<div class="h-8 w-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
									<svg class="h-4 w-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
									</svg>
								</div>
								<span class="text-gray-600">Profile Views</span>
							</div>
							<span class="font-semibold text-gray-900">3,456</span>
						</div> *@
						</div>
					</div>

					<!-- Personal Info -->
					<div class="bg-white rounded-xl shadow-lg p-6">
						<div class="flex items-center justify-between mb-4">
							<h3 class="text-lg font-semibold text-gray-900">Thông tin cá nhân</h3>
							@if (!viewByGuest)
							{
								<button class="text-diary-purple hover:text-diary-pink transition duration-200">
									<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
									</svg>
								</button>
							}
						</div>
						<div class="space-y-3">
							<div class="flex items-center">
								<svg class="h-4 w-4 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
								</svg>
								<span class="text-gray-600">@user.Email</span>
							</div>
						</div>
					</div>

					<!-- Privacy Settings -->
					@if (!viewByGuest)
					{
						<div class="bg-white rounded-xl shadow-lg p-6">
							<h3 class="text-lg font-semibold text-gray-900 mb-4">Quyền riêng tư</h3>
							<div class="space-y-4">
								<div class="flex items-center justify-between">
									<div>
										<p class="font-medium text-gray-900">Công khai</p>
										<p class="text-sm text-gray-500">Cho phép người khác xem trang cá nhân của bạn</p>
									</div>
									<LumexSwitch Value="@(user.IsPublic == 1 ? true : false)"></LumexSwitch>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	}
	else
	{
		<div class="text-2xl font-bold text-center pt-20">Không thể xem trang cá nhân</div>
	}
</div>

@code {
	[Parameter] public string id { get; set; }
	private User user = new User();
	private bool viewByGuest = false;

	protected override void OnInitialized()
	{
		try
		{
			User u = context.Users
				.Include(u => u.Diaries)
				.FirstOrDefault(u => u.Id == id);
			if (u != null)
			{
				user = u;
			}
			else
			{
				Console.WriteLine($"User with ID {id} not found.");
			}
		}
		catch (Exception ex)
		{
			Console.WriteLine($"Error in OnInitialized: {ex.Message}");
		}
	}

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			if (AppState.CurrentUser == null || AppState.CurrentUser.Id != user.Id)
			{
				viewByGuest = true;
			}
			else
			{
				viewByGuest = false;
			}
		}
		StateHasChanged();
	}

	private MarkupString FilterContent(string html)
	{
		string filtered = Regex.Replace(html, @"<img[^>]*\/?>", "", RegexOptions.IgnoreCase);
		filtered = Regex.Replace(filtered, @"<\/?p[^>]*>", "", RegexOptions.IgnoreCase);
		filtered = Regex.Replace(filtered, @"\s{2,}", " ");
		filtered = filtered.Trim();
		return new MarkupString(filtered);
	}

}
